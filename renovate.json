{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": [
    "config:base",
    ":preserveSemverRanges",
    ":rebaseStalePrs",
    "schedule:weekly",
    "group:recommended",
    "group:monorepos",
    "workarounds:all"
  ],
  "rebaseWhen": "behind-base-branch",
  "labels": ["deps"],
  "dependencyDashboard": false,
  "packageRules": [
    {
      "matchFiles": ["MODULE.bazel"],
      "enabled": false
    }
  ],
  "pip-compile": {
    "managerFilePatterns": ["/(^|/)requirements\\.txt$/"]
  },
  "pip_requirements": {
    "enabled": false
  },
  "pip_setup": {
    "enabled": false
  }
}
