load("@bazel_skylib//rules:build_test.bzl", "build_test")
load("//py/unstable:defs.bzl", "py_venv")

py_venv(
    name = "test_venv_error",
    deps = [
        "//py/tests/py_venv_conflict/a",
        "//py/tests/py_venv_conflict/b",
    ],
    package_collisions="error",
    tags = [
        "manual",
        "known-to-fail",
    ]
