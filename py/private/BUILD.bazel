load("@bazel_skylib//:bzl_library.bzl", "bzl_library")

exports_files(
    [
        "run.tmpl.sh",
        "venv.tmpl.sh",
        "run.tmpl.py",
        "pytest.py.tmpl",
    ],
    visibility = ["//visibility:public"],
)

