    visibility = ["//py:__subpackages__"],
    deps = [
        ":py_library",
        ":py_semantics",
        "//py/private/toolchain:types",
        "@bazel_skylib//lib:paths",
    ],
)

bzl_library(
    name = "py_venv",
    srcs = ["py_venv.bzl"],
    visibility = ["//py:__subpackages__"],
    deps = [
        ":providers",
        ":py_library",
        ":py_semantics",
        "//py/private/toolchain:types",
        "@aspect_bazel_lib//lib:paths",
        "@bazel_skylib//lib:paths",
    ],
)

bzl_library(
    name = "providers",
    srcs = ["providers.bzl"],
